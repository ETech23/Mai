                    <div class="stat-item">
                        <span class="stat-value">${appState.score}</span>
                        <span class="stat-label">Total Knowledge</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value">${appState.level}</span>
                        <span class="stat-label">Level</span>
                    </div>
                </div>
            </div>
